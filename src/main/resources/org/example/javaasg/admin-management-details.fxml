<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="managementUserUsernameVBox" spacing="10.0" style="-fx-background-color: #bdbdbd; -fx-background-radius: 6;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Username">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label onMouseClicked="#onManageUsernameButtonClick" onMouseEntered="#onLabelHover" onMouseExited="#onLabelHoverExit" text="Change.." textFill="#3683ff" underline="true">
                     <font>
                        <Font name="Arial" size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextField fx:id="managementUserUsernameField" disable="true" focusTraversable="false" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox fx:id="managementUserPasswordVBox" spacing="10.0" style="-fx-background-color: #bdbdbd; -fx-background-radius: 6;">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Password">
                     <font>
                        <Font name="Arial Bold" size="13.0" />
                     </font>
                  </Label>
                  <Label onMouseClicked="#onManagePasswordButtonClick" onMouseEntered="#onLabelHover" onMouseExited="#onLabelHoverExit" text="Change.." textFill="#3683ff" underline="true">
                     <font>
                        <Font name="Arial" size="11.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <TextField fx:id="managementUserPasswordField" disable="true" focusTraversable="false" promptText="******" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1500.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javaasg.AddVehicles">
   <center>
      <VBox alignment="CENTER" spacing="20">
         <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Add New Vehicle" />
         <HBox alignment="CENTER" prefHeight="382.0" prefWidth="1500.0" spacing="20">
            <VBox alignment="CENTER" prefHeight="326.0" prefWidth="394.0" spacing="10">
               <ImageView fx:id="imageView" fitHeight="300.0" fitWidth="300.0" />
               <Button onAction="#uploadImage" style="-fx-font-size: 14px;" text="Upload Image" />
            </VBox>
            <VBox alignment="CENTER_LEFT" spacing="25.0">
               <TextField fx:id="carModelField" prefWidth="300.0" promptText="Car Model" />
               <ComboBox fx:id="brandComboBox" prefWidth="300.0" promptText="Brand" />
               <TextField fx:id="priceField" prefWidth="300.0" promptText="Price" />
               <ComboBox fx:id="segmentComboBox" prefWidth="300.0" promptText="Segment" />
               <ComboBox fx:id="seatComboBox" prefWidth="300.0" promptText="Seat" />
               <TextField fx:id="fuelConsumptionField" prefWidth="300.0" promptText="Fuel Consumption /L" />
               <ComboBox fx:id="gearboxComboBox" prefWidth="300.0" promptText="Gearbox" />
            </VBox>
         </HBox>
         <HBox alignment="CENTER" prefHeight="8.0" prefWidth="1500.0" spacing="20" style="-fx-padding: 20px;">
            <Button fx:id="addVehicleButton" onAction="#addVehicle" style="-fx-font-size: 14px;" text="Add Vehicle" />
            <Button fx:id="backButton" onAction="#goBack" style="-fx-font-size: 14px;" text="Back" />
         </HBox>
      </VBox>
   </center>
</BorderPane>

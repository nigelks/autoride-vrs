<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1500.0" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javaasg.Controller">
   <center>
      <VBox alignment="CENTER">
         <ImageView fitHeight="200.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../assets/static/text.png" />
            </image>
         </ImageView>
         <ButtonBar buttonMinWidth="125.0" maxHeight="100.0" maxWidth="359.0" prefHeight="40.0" prefWidth="359.0">
           <buttons>
              <Button alignment="CENTER" focusTraversable="false" onAction="#redirectToRegister" stylesheets="@css/button.css" text="Register" textFill="WHITE" ButtonBar.buttonData="LEFT">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
                  <font>
                     <Font name="Arial" size="13.0" />
                  </font>
               </Button>
             <Button alignment="CENTER" contentDisplay="RIGHT" focusTraversable="false" mnemonicParsing="false" onAction="#redirectToLogin" stylesheets="@css/button.css" text="Log in" textFill="WHITE" ButtonBar.buttonData="RIGHT">
                  <font>
                     <Font name="Arial" size="13.0" />
                  </font>
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </Button>
           </buttons>
         </ButtonBar>
      
        <Label fx:id="welcomeText" />
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Label text="Version: 1.0.0" textFill="WHITE">
               <padding>
                  <Insets bottom="5.0" right="5.0" />
               </padding>
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
